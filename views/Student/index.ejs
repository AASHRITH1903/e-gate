<!DOCTYPE html>
<html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body {
      font-family: "Lato", sans-serif;
      background-color: #9FD8DF;
      background-image: linear-gradient(to right, #9FD8DF, #F5C0C0);
    }

    .sidebar {
      height: 100%;
      width: 0;
      position: fixed;
      z-index: 1;
      top: 0;
      left: 0;
      background-color: #1687A7;
      overflow-x: hidden;
      transition: 0.5s;
      padding-top: 60px;
    }

    .sidebar a {
      padding: 8px 8px 8px 32px;
      text-decoration: none;
      font-size: 25px;
      color: #D3E0EA;
      display: block;
      transition: 0.3s;
    }

    .sidebar a:hover {
      color: #f1f1f1;
    }

    .sidebar .closebtn {
      position: absolute;
      top: 0;
      right: 25px;
      font-size: 36px;
      margin-left: 50px;
    }

    .openbtn {
      cursor: pointer;
      padding: 10px 15px;
      border: none;
      border-radius: 12px;
    }

    .openbtn:hover {
      background-color: #276678;
    }

    #main {
      transition: margin-left .5s;
      padding: 16px;
    }


    p {
      padding: 0 20px;
    }

    .row:after {
      content: "";
      display: table;
      clear: both;
    }

    .row {
      column-gap: 11%;
      /* margin-left: 50px; */
      margin-left: 5%;
    }

    /* .card1 {
      padding-left: 25px;
    } */

    .card {
      opacity: 0.8;
      font-weight: bold;
    }


    img {
      border-radius: 4px;
      padding: 5px;
      margin-left: 55px;
    }

    .button {
      border-radius: 15px;
    }

    h2 {
      display: inline-block;
    }

    h5 {
      font-weight: bold;
    }

    hr.headLine {
      border: 1px solid #1687A7;
    }

    .sideButton:hover {
      font-weight: bold;
    }

    .sideButton.shadow:hover {
      font-weight: normal;
      text-shadow: 0px 0px 1px black;
    }

    .logout{
      position: absolute;
      right: 5%;
      color: white;
    }

    /* On smaller screens, where height is less than 450px, change the style of the sidenav (less padding and a smaller font size) */
    @media screen and (max-height: 450px) {
      .card {
        width: 100%;
      }

      .sidebar {
        padding-top: 15px;
      }

      .sidebar a {
        font-size: 18px;
      }
    }
  </style>
</head>

<body>

  <div id="mySidebar" class="sidebar">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
    <a href="#">About</a>
    <a href="/student/dashboard/history">History</a>
    <a href="#">Clients</a>
    <a href="#">Contact</a>
  </div>

  <div id="main">
    <!-- <button class="openbtn" onclick="openNav()">&#9776; <h2> Student Dashboard</h2></button> -->
    <span class="sideButton" style="font-size:30px;cursor:pointer;color:#2541B2;" onclick="openNav()">&#9776; Student Dashboard</span>
    <a href="/" class="btn btn-danger btn-lg logout">
      <span class="glyphicon glyphicon-log-out"></span> Log out
    </a>
    <hr class="headLine">
    <!-- <p style="color: white">Click on the hamburger menu/bar icon to open the sidebar, and push this content to the right.</p> -->
    <div class="row">
      <div class="card card1 shadow p-3 mb-5 bg-white rounded" style="width: 18rem; height: 27rem;">
        <img src="/static/images/student.png" class="card-img-top" alt="..." style="width: 9rem; height: 9rem">
        <div class="card-body">
          <h5 class="card-title" style="color: #4AA96C">Profile</h5>
          <p class="card-text">Your profile is an overview of general information about yourself. Please do fill it to the full extent of your knowledge</p>
          <a href="/student/dashboard/editprofile" class="btn btn-success">Build your profile</a>
        </div>
      </div>

      <div class="card card2 shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
        <img src="/static/images/warning1.png" class="card-img-top testImage" alt="..." style="width: 9rem; height: 9rem">
        <div class="card-body">
          <h5 class="card-title" style="color: orange;">Warnings/Penalities</h5>
          <p class="card-text">Warning will keep you alert about intime. Penalities in case you miss intime.</p>
          <button type="button" class="btn btn-warning btn-lg button" data-toggle="collapse" data-target="#demo">Warnings/Penalities</button>
          <div id="demo" class="collapse">
            <br>
            <h2>Warnings</h2>
            <p>None</p>
            <h2>Penalities</h2>
            <p>None</p>
          </div>
        </div>
      </div>

      <div class="card card3 shadow p-3 mb-5 bg-white rounded" style="width: 18rem; height: 27rem;">
        <img src="/static/images/reserve.png" class="card-img-top" alt="..." style="width: 9rem; height: 9rem">
        <div class="card-body">
          <h5 class="card-title" style="color: red">Schedule Outing</h5>
          <p class="card-text">Information given in the form will be kept private and will only be disclosed in cases of emergency.</p>
          <a href="/student/dashboard/requests" class="btn btn-danger">Reserve</a>
        </div>
      </div>

    </div>
  </div>

  <div class="navbar navbar-inverse navbar-fixed-bottom">
    <div class="container">
         <p class="navbar-text">©2021 Copyright: <strong>wecreate.com</strong></p>
    </div>
  </div>


  <script>
    function openNav() {
      document.getElementById("mySidebar").style.width = "250px";
      document.getElementById("main").style.marginLeft = "250px";
    }

    function closeNav() {
      document.getElementById("mySidebar").style.width = "0";
      document.getElementById("main").style.marginLeft = "0";
    }
  </script>

  <script>
    $(document).ready(function() {
      console.log("document is ready");
      $(".card").hover(
        function() {
          $(this).addClass('shadow-lg').css('cursor', 'pointer');
        },
        function() {
          $(this).removeClass('shadow-lg');
        }
      );
    })
  </script>

  <% if (flag1 === 0) { %>
  <script>
    alert("Failed.");
  </script>
  <% } else if(flag1 === 1){%>
  <script>
    alert("Your profile is being updated.");
  </script>
  <% } else if(flag1 === 2){%>
  <script>
    alert("Your request is being sent.");
  </script>
  <% } %>

</body>

</html>
