<!DOCTYPE html>
<html lang="en">

  <head>
        <%- include("../partials/admin.head.ejs", {title : "Outing Requests"}) %>
  </head>

  <body>

            <%- include('../partials/admin.nav.ejs') %>

              <div class="container">
                <h2 style="margin: 20px;">Outing Requests</h2>

                      <div class="row">

                              <% requests.forEach(function(request){ %>
                                <% if(request.status == "pending"){ %>
                                    <div class="col-md-4">
                                        <div class="card" style="width: 18rem;">
                                          <img class="card-img-top" src="/static/images/student.png" alt="Card image cap" />
                                          <div class="card-body">
                                            <h5 class="card-title" style="text-transform: uppercase;"><%= request.name %></h5>
                                            <h5 class="card-title" style="text-transform: uppercase;"><%= request.roll %></h5>
                                            <p class="card-text">Reason : <%= request.reason %></p>
                                            <p class="card-text">Location : <%= request.location %></p>
                                            <p class="card-text">Ph.No : <%= request.phno %></p>
                                            <a href="#" class="btn btn-success">Accept</a>
                                            <a href="#" class="btn btn-danger">Reject</a>
                                          </div>
                                        </div>
                                    </div>
                                <% } %>
                              <% }); %>

                      </div>
              </div>



            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous" ></script>

            <script src="/static/js/admin.js"></script>


  </body>
</html>
